# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000' # Or python -m SimpleHTTPServer :)

# NOTE: On Q3 2021, Le Wagon decided to change the Web Dev curriculum default text editor
alias stt="echo 'Launching VS Code instead of Sublime Text... (cf ~/.aliases)' && code ."

# Aditional git aliases
alias gbpmk="gb --list 'feat*/pk-*'"
alias gsweep="git branch --merged main | grep -v 'main$' | xargs git branch -d"
alias gsweep-dev="git branch --merged develop | grep -v 'develop$' | xargs git branch -d"
alias glog="git log --graph --pretty=format:'%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset' --abbrev-commit --date=relative"

# Docker aliases
alias dc="docker compose"
alias dcup="docker compose up -d"
alias dcsh="runshell"
runshell() { docker compose exec $1 /bin/sh; }

# Yarn aliases
alias ysb="yarn storybook"
alias yapi="yarn api http://localhost:8000/playground\?format\=openapi"
alias ylint="yarn lint && yarn format"
alias yjest="yarn jest --clearCache && yarn jest -u --silent --detectOpenHandles --forceExit"

# Python aliases
alias pylint="flake8 . && isort . && black ."

# Shortcuts
alias s-fe="cd ~/code/syntho/syntho-engine-UI/"
alias s-be="cd ~/code/syntho/syntho-engine-backend/"
alias s-cypress="~/code/syntho/syntho-engine-UI/scripts/cypress-int.sh"
alias s-cy-run="cd ~/code/syntho/syntho-engine-UI/ && CYPRESS_BASE_URL=http://localhost:3000 cypress run -P tests/"
alias r-web="~/code/researchable/TF-general/TF-Landingpages/landingpage-v2/"
alias pmkihara="~/code/pmkihara"
alias w-fe="cd ~/code/researchable/projects/wyzser/composer/base-frontend/"
alias w-be="cd ~/code/researchable/projects/wyzser/composer/base-backend/"
alias w-comp="cd ~/code/researchable/projects/wyzser/composer/"

# Start Postgres
alias pg-start="sudo /etc/init.d/postgresql start"
alias pg-stop="sudo service postgresql stop"
